<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Student Registration System' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css">
    
    <!-- Prevent flash of wrong theme -->
    <script>
        (function() {
            const theme = localStorage.getItem('theme');
            if (theme === 'dark') {
                document.documentElement.setAttribute('data-bs-theme', 'dark');
            }
        })();
    </script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-github">
        <div class="container-fluid">
            <!-- Brand and Admin Info -->
            <div class="d-flex align-items-center">
                <a class="navbar-brand me-3" href="/">
                    <div class="logo-container">
                        <div class="logo-badge">
                            <img src="/assets/student.svg" alt="SRS Logo">
                        </div>
                        <span class="logo-text">SRS</span>
                    </div>
                </a>
                <!-- Admin text beside SRS on mobile -->
                <% if (locals.user) { %>
                    <span class="navbar-text d-lg-none mobile-user username-gradient">
                        <%= user.username %>
                    </span>
                <% } %>
            </div>
            
            <!-- Right side items (always visible) -->
            <div class="d-flex align-items-center order-lg-3">
                <!-- Theme Toggle -->
                <button class="btn theme-toggle me-2" id="darkModeToggle">
                    <img src="/assets/moon.svg" alt="Dark Mode" width="18" height="18" id="moonIcon" style="filter: brightness(0) invert(1);">
                    <img src="/assets/sun.svg" alt="Light Mode" width="18" height="18" id="sunIcon" class="d-none" style="filter: brightness(0) invert(1);">
                </button>
                
                <!-- Burger Menu Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            
            <!-- Collapsible Navigation -->
            <div class="collapse navbar-collapse order-lg-2" id="navbarNav">
                <div class="navbar-nav me-auto">
                    <% if (locals.user) { %>
                        <a class="nav-link" href="/students">Students</a>
                        <a class="nav-link" href="/instructors">Instructors</a>
                        <a class="nav-link" href="/classes">Classes</a>
                        <a class="nav-link" href="/attendance">Attendance</a>
                    <% } %>
                </div>
                
                <!-- Desktop user menu -->
                <div class="navbar-nav d-none d-lg-flex">
                    <% if (locals.user) { %>
                        <span class="navbar-text me-3 username-gradient">
                            <%= user.username %>
                        </span>
                        <a class="nav-link logout-link" href="/auth/logout">Logout</a>
                    <% } else { %>
                        <a class="nav-link" href="/auth/login">Login</a>
                        <a class="nav-link" href="/auth/register">Register</a>
                    <% } %>
                </div>
                
                <!-- Mobile-only menu items -->
                <div class="navbar-nav d-lg-none">
                    <% if (locals.user) { %>
                        <hr class="dropdown-divider">
                        <a class="nav-link mobile-logout" href="/auth/logout">Logout</a>
                    <% } else { %>
                        <hr class="dropdown-divider">
                        <a class="nav-link" href="/auth/login">Login</a>
                        <a class="nav-link" href="/auth/register">Register</a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>
    <div class="container mt-4">