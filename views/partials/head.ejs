<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Student Registration System' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <style>
        :root {
            --accent-color: #6B46C1;
            --accent-hover: #553C9A;
            --accent-light: #8B5CF6;
        }

        .navbar-github {
            background-color: #24292f !important;
            border-bottom: 1px solid #30363d;
        }
        
        .navbar-github .navbar-brand {
            color: #f0f6fc !important;
        }
        
        .navbar-github .nav-link {
            color: #f0f6fc !important;
        }
        
        .navbar-github .nav-link:hover {
            color: var(--accent-light) !important;
        }
        
        .navbar-github .navbar-text {
            color: #f0f6fc !important;
        }

        .theme-toggle {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 6px;
            transition: background-color 0.2s ease;
        }

        .theme-toggle:hover {
            background-color: rgba(107, 70, 193, 0.1);
        }

        .theme-icon {
            width: 18px;
            height: 18px;
            fill: #f0f6fc;
        }

        /* Override Bootstrap primary color with dark purple */
        .btn-primary {
            background-color: var(--accent-color);
            border-color: var(--accent-color);
        }

        .btn-primary:hover {
            background-color: var(--accent-hover);
            border-color: var(--accent-hover);
        }

        .btn-outline-primary {
            color: var(--accent-color);
            border-color: var(--accent-color);
        }

        .btn-outline-primary:hover {
            background-color: var(--accent-color);
            border-color: var(--accent-color);
        }

        /* Update links and accents */
        a {
            color: var(--accent-color);
        }

        a:hover {
            color: var(--accent-hover);
        }

        .text-primary {
            color: var(--accent-color) !important;
        }

        .bg-primary {
            background-color: var(--accent-color) !important;
        }

        .border-primary {
            border-color: var(--accent-color) !important;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-github">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Student Registration System</a>
            <div class="navbar-nav ms-auto d-flex align-items-center">
                <button class="btn theme-toggle me-3" id="darkModeToggle">
                    <svg class="theme-icon" id="moonIcon" viewBox="0 0 24 24">
                        <path d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z"/>
                    </svg>
                    <svg class="theme-icon d-none" id="sunIcon" viewBox="0 0 24 24">
                        <path d="M12 2.25a.75.75 0 01.75.75v2.25a.75.75 0 01-1.5 0V3a.75.75 0 01.75-.75zM7.5 12a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM18.894 6.166a.75.75 0 00-1.06-1.06l-1.591 1.59a.75.75 0 101.06 1.061l1.591-1.59zM21.75 12a.75.75 0 01-.75.75h-2.25a.75.75 0 010-1.5H21a.75.75 0 01.75.75zM17.834 18.894a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 10-1.061 1.06l1.59 1.591zM12 18a.75.75 0 01.75.75V21a.75.75 0 01-1.5 0v-2.25A.75.75 0 0112 18zM7.758 17.303a.75.75 0 00-1.061-1.06l-1.591 1.59a.75.75 0 001.06 1.061l1.591-1.59zM6 12a.75.75 0 01-.75.75H3a.75.75 0 010-1.5h2.25A.75.75 0 016 12zM6.697 7.757a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 00-1.061 1.06l1.59 1.591z"/>
                    </svg>
                </button>
                <% if (locals.user) { %>
                    <span class="navbar-text me-3">Welcome, <%= user.username %>!</span>
                    <a class="nav-link" href="/auth/logout">Logout</a>
                <% } else { %>
                    <a class="nav-link" href="/auth/login">Login</a>
                    <a class="nav-link" href="/auth/register">Register</a>
                <% } %>
            </div>
        </div>
    </nav>
    <div class="container mt-4">

<script>
    const darkModeToggle = document.getElementById('darkModeToggle');
    const moonIcon = document.getElementById('moonIcon');
    const sunIcon = document.getElementById('sunIcon');
    const body = document.body;
    
    // Check for saved theme preference or default to light mode
    const currentTheme = localStorage.getItem('theme') || 'light';
    if (currentTheme === 'dark') {
        body.setAttribute('data-bs-theme', 'dark');
        moonIcon.classList.add('d-none');
        sunIcon.classList.remove('d-none');
    }
    
    darkModeToggle.addEventListener('click', function() {
        if (body.getAttribute('data-bs-theme') === 'dark') {
            body.setAttribute('data-bs-theme', 'light');
            moonIcon.classList.remove('d-none');
            sunIcon.classList.add('d-none');
            localStorage.setItem('theme', 'light');
        } else {
            body.setAttribute('data-bs-theme', 'dark');
            moonIcon.classList.add('d-none');
            sunIcon.classList.remove('d-none');
            localStorage.setItem('theme', 'dark');
        }
    });
</script>