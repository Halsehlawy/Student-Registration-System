<%- include('../partials/head', { title: '500 - Server Error' }) %>

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
    <div class="text-center">
        <div class="error-content">
            <!-- 500 Number -->
            <h1 class="display-1 fw-bold text-danger mb-0" style="font-size: 8rem;">500</h1>
            
            <!-- Error Message -->
            <h2 class="h3 mb-3">Internal Server Error</h2>
            <p class="text-muted mb-4 fs-5">
                Something went wrong on our end. We're working to fix it.
            </p>
            
            <!-- Illustration -->
            <div class="mb-4">
                <i class="fas fa-exclamation-triangle fa-4x text-danger opacity-50"></i>
            </div>
            
            <!-- Action Buttons -->
            <div class="d-flex gap-3 justify-content-center flex-wrap">
                <a href="/" class="btn btn-primary">
                    <i class="fas fa-home me-2"></i>Go Home
                </a>
                <button onclick="location.reload()" class="btn btn-outline-secondary">
                    <i class="fas fa-redo me-2"></i>Try Again
                </button>
            </div>
            
            <!-- Help Text -->
            <div class="mt-4">
                <p class="text-muted small">
                    Error ID: <%= Date.now() %> | Please report this to the administrator.
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .error-content {
        max-width: 500px;
    }
    
    @media (max-width: 576px) {
        .display-1 {
            font-size: 5rem !important;
        }
    }
    
    .btn {
        min-width: 120px;
    }
</style>

<%- include('../partials/footer') %>