<%- include('../../partials/head', { title: 'Attendance Dashboard' }) %>

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Attendance Dashboard</h2>
            <div class="text-muted">
                <i class="fas fa-calendar-day me-2"></i>
                <%= new Date().toLocaleDateString() %>
            </div>
        </div>
        
        <!-- Quick Stats -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4><%= classes.length %></h4>
                                <p class="mb-0">Total Classes</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-chalkboard fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4><%= todayAttendance.length %></h4>
                                <p class="mb-0">Today's Records</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-check-circle fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4><%= classes.length - todayAttendance.length %></h4>
                                <p class="mb-0">Pending</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-clock fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4><%= classes.reduce((total, cls) => total + cls.students.length, 0) %></h4>
                                <p class="mb-0">Total Students</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-users fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Classes List -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Classes - Take Attendance</h5>
            </div>
            <div class="card-body">
                <% if (classes && classes.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Class</th>
                                    <th>Instructor</th>
                                    <th>Students</th>
                                    <th>Schedule</th>
                                    <th>Today's Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% classes.forEach(classItem => { %>
                                    <% 
                                    const hasAttendanceToday = todayAttendance.find(att => 
                                        att.class._id.toString() === classItem._id.toString()
                                    );
                                    %>
                                    <tr>
                                        <td>
                                            <strong><%= classItem.name %></strong>
                                            <br><small class="text-muted"><%= classItem.subject %></small>
                                        </td>
                                        <td><%= classItem.instructor ? classItem.instructor.name : 'Not assigned' %></td>
                                        <td>
                                            <span class="badge bg-info">
                                                <%= classItem.students.length %> students
                                            </span>
                                        </td>
                                        <td><%= classItem.schedule %></td>
                                        <td>
                                            <% if (hasAttendanceToday) { %>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check me-1"></i>Completed
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-clock me-1"></i>Pending
                                                </span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/attendance/take/<%= classItem._id %>" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-user-check me-1"></i>Take Attendance
                                                </a>
                                                <a href="/attendance/history/<%= classItem._id %>" class="btn btn-sm btn-outline-secondary">
                                                    <i class="fas fa-history me-1"></i>History
                                                </a>
                                                <a href="/attendance/stats/<%= classItem._id %>" class="btn btn-sm btn-outline-info">
                                                    <i class="fas fa-chart-bar me-1"></i>Stats
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="fas fa-chalkboard fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No classes found. <a href="/classes/new">Create a class</a> to start taking attendance.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer') %>