<%- include('../../partials/head', { title: 'Student Details' }) %>

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Student Details</h2>
            <div>
                <a href="/students/<%= student._id %>/edit" class="btn btn-primary me-2">Edit Student</a>
                <a href="/students" class="btn btn-secondary">Back to Students</a>
            </div>
        </div>
        
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <img src="<%= student.image %>" alt="<%= student.name %>" 
                             class="img-fluid rounded mb-3" style="max-width: 300px; max-height: 300px; object-fit: cover;">
                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-sm-3">
                                <strong>Student ID:</strong>
                            </div>
                            <div class="col-sm-9">
                                <%= student.id %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <strong>Full Name:</strong>
                            </div>
                            <div class="col-sm-9">
                                <%= student.name %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <strong>Parent Contact:</strong>
                            </div>
                            <div class="col-sm-9">
                                <%= student.parent_contact %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <strong>Address:</strong>
                            </div>
                            <div class="col-sm-9">
                                <%= student.address %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <strong>Created:</strong>
                            </div>
                            <div class="col-sm-9">
                                <%= new Date(student.createdAt).toLocaleDateString() %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <strong>Last Updated:</strong>
                            </div>
                            <div class="col-sm-9">
                                <%= new Date(student.updatedAt).toLocaleDateString() %>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="mt-4 d-flex justify-content-end">
                    <form method="POST" action="/students/<%= student._id %>?_method=DELETE" 
                          class="d-inline" onsubmit="return confirm('Are you sure you want to delete this student?')">
                        <button type="submit" class="btn btn-danger">Delete Student</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>