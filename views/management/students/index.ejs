<%- include('../../partials/head', { title: 'Students' }) %>

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Students</h2>
            <% if (typeof userRole !== 'undefined' && userRole === 'admin') { %>
                <a href="/students/new" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add New Student
                </a>
            <% } %>
        </div>
        
        <div class="card">
            <div class="card-body">
                <% if (students && students.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 80px;">ID</th>
                                    <th style="width: 200px;">Student</th>
                                    <th style="width: 150px;">Phone</th>
                                    <th style="width: 250px;">Address</th>
                                    <% if (typeof userRole !== 'undefined' && userRole === 'admin') { %>
                                        <th style="width: 120px;">Actions</th>
                                    <% } %>
                                </tr>
                            </thead>
                            <tbody>
                                <% students.forEach(student => { %>
                                    <tr class="clickable-row" data-href="/students/<%= student._id %>" style="cursor: pointer;">
                                        <td><%= student.id %></td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="<%= student.image %>" alt="<%= student.name %>" 
                                                     class="rounded-circle me-3" width="40" height="40"
                                                     style="object-fit: cover;">
                                                <strong><%= student.name %></strong>
                                            </div>
                                        </td>
                                        <td><%= student.parent_contact %></td>
                                        <td><%= student.address %></td>
                                        <% if (typeof userRole !== 'undefined' && userRole === 'admin') { %>
                                            <td onclick="event.stopPropagation();">
                                                <div class="dropdown">
                                                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" 
                                                            data-bs-toggle="dropdown" aria-expanded="false">
                                                        Actions
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li>
                                                            <a class="dropdown-item" href="/students/<%= student._id %>/edit">
                                                                <i class="fas fa-edit me-2"></i>Edit
                                                            </a>
                                                        </li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <form method="POST" action="/students/<%= student._id %>?_method=DELETE" 
                                                                  onsubmit="return confirm('Are you sure you want to delete this student?')">
                                                                <button type="submit" class="dropdown-item text-danger">
                                                                    <i class="fas fa-trash me-2"></i>Delete
                                                                </button>
                                                            </form>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </td>
                                        <% } %>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="fas fa-users fa-3x text-muted mb-3"></i>
                        <% if (typeof userRole !== 'undefined' && userRole === 'admin') { %>
                            <p class="text-muted">No students found. <a href="/students/new">Add your first student</a> to get started.</p>
                        <% } else { %>
                            <p class="text-muted">No students found.</p>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script>
    // Make table rows clickable
    document.querySelectorAll('.clickable-row').forEach(row => {
        row.addEventListener('click', function() {
            window.location.href = this.dataset.href;
        });
    });
</script>

<%- include('../../partials/footer') %>