<%- include('../../partials/head', { title: 'Instructor Details' }) %>

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Instructor Details</h2>
            <div>
                <!-- Hide edit button from instructors -->
                <% if (typeof userRole !== 'undefined' && userRole === 'admin') { %>
                    <a href="/instructors/<%= instructor._id %>/edit" class="btn btn-primary me-2">Edit Instructor</a>
                <% } %>
                <a href="/instructors" class="btn btn-secondary">Back to Instructors</a>
            </div>
        </div>
        
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <img src="<%= instructor.image %>" alt="<%= instructor.name %>" 
                             class="img-fluid rounded mb-3" style="max-width: 300px; max-height: 300px; object-fit: cover;">
                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-sm-3">
                                <strong>Instructor ID:</strong>
                            </div>
                            <div class="col-sm-9">
                                <%= instructor.id %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <strong>Full Name:</strong>
                            </div>
                            <div class="col-sm-9">
                                <%= instructor.name %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <strong>Contact:</strong>
                            </div>
                            <div class="col-sm-9">
                                <%= instructor.contact %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <strong>Address:</strong>
                            </div>
                            <div class="col-sm-9">
                                <%= instructor.address %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <strong>Created:</strong>
                            </div>
                            <div class="col-sm-9">
                                <%= new Date(instructor.createdAt).toLocaleDateString() %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <strong>Last Updated:</strong>
                            </div>
                            <div class="col-sm-9">
                                <%= new Date(instructor.updatedAt).toLocaleDateString() %>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="mt-4 d-flex justify-content-end">
                    <!-- Hide delete button from instructors -->
                    <% if (typeof userRole !== 'undefined' && userRole === 'admin') { %>
                        <form method="POST" action="/instructors/<%= instructor._id %>?_method=DELETE" 
                              class="d-inline" onsubmit="return confirm('Are you sure you want to delete this instructor?')">
                            <button type="submit" class="btn btn-danger">Delete Instructor</button>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>