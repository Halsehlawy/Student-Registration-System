<%- include('../../partials/head', { title: 'Edit Instructor' }) %>

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Edit Instructor</h2>
            <a href="/instructors" class="btn btn-secondary">Back to Instructors</a>
        </div>
        
        <div class="card">
            <div class="card-body">
                <form method="POST" action="/instructors/<%= instructor._id %>?_method=PUT">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="instructorId" class="form-label">Instructor ID</label>
                                <input type="number" class="form-control" name="id" id="instructorId" 
                                       value="<%= instructor.id %>" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="instructorName" class="form-label">Full Name</label>
                                <input type="text" class="form-control" name="name" id="instructorName" 
                                       value="<%= instructor.name %>" required>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="instructorImage" class="form-label">Image URL</label>
                        <input type="url" class="form-control" name="image" id="instructorImage" 
                               value="<%= instructor.image %>" required>
                        <div class="mt-2">
                            <img src="<%= instructor.image %>" alt="Preview" class="rounded" 
                                 width="100" height="100" style="object-fit: cover;">
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="instructorContact" class="form-label">Contact</label>
                        <input type="tel" class="form-control" name="contact" id="instructorContact" 
                               value="<%= instructor.contact %>" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="instructorAddress" class="form-label">Address</label>
                        <textarea class="form-control" name="address" id="instructorAddress" rows="3" required><%= instructor.address %></textarea>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Update Instructor</button>
                        <a href="/instructors" class="btn btn-secondary">Cancel</a>
                        <form method="POST" action="/instructors/<%= instructor._id %>?_method=DELETE" 
                              class="d-inline ms-auto" onsubmit="return confirm('Are you sure you want to delete this instructor?')">
                            <button type="submit" class="btn btn-danger">Delete Instructor</button>
                        </form>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer') %>