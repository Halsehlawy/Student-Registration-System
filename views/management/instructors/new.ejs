<%- include('../../partials/head', { title: 'Add New Instructor' }) %>

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Add New Instructor</h2>
            <a href="/instructors" class="btn btn-secondary">Back to Instructors</a>
        </div>
        
        <div class="card">
            <div class="card-body">
                <form method="POST" action="/instructors">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="instructorId" class="form-label">Instructor ID</label>
                                <input type="number" class="form-control" name="id" id="instructorId" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="instructorName" class="form-label">Full Name</label>
                                <input type="text" class="form-control" name="name" id="instructorName" required>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="instructorImage" class="form-label">Image URL</label>
                        <input type="url" class="form-control" name="image" id="instructorImage" 
                               placeholder="https://example.com/image.jpg" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="instructorContact" class="form-label">Contact</label>
                        <input type="tel" class="form-control" name="contact" id="instructorContact" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="instructorAddress" class="form-label">Address</label>
                        <textarea class="form-control" name="address" id="instructorAddress" rows="3" required></textarea>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Add Instructor</button>
                        <a href="/instructors" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer') %>