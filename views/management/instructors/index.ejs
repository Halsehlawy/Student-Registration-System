<%- include('../../partials/head', { title: 'Instructors' }) %>

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Instructors</h2>
            <% if (typeof userRole !== 'undefined' && userRole === 'admin') { %>
                <a href="/instructors/new" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add New Instructor
                </a>
            <% } %>
        </div>

        <!-- Search Bar -->
        <% if (instructors && instructors.length > 0) { %>
            <div class="card mb-3">
                <div class="card-body py-3">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search text-muted"></i>
                                </span>
                                <input type="text" 
                                       class="form-control" 
                                       id="instructorSearch" 
                                       placeholder="Search instructors by name, ID, or contact..."
                                       autocomplete="off">
                            </div>
                        </div>
                        <div class="col-md-4 mt-3 mt-md-0">
                            <div class="d-flex justify-content-end align-items-center">
                                <span class="text-muted me-3" id="instructorCount">
                                    <%= instructors.length %> instructor<%= instructors.length !== 1 ? 's' : '' %> found
                                </span>
                                <button class="btn btn-outline-secondary btn-sm" id="clearSearch" style="display: none;">
                                    <i class="fas fa-times me-1"></i>Clear
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
        
        <div class="card">
            <div class="card-body">
                <% if (instructors && instructors.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 80px;">ID</th>
                                    <th style="width: 200px;">Instructor</th>
                                    <th style="width: 150px;">Contact</th>
                                    <th style="width: 200px;">Address</th>
                                    <% if (typeof userRole !== 'undefined' && userRole === 'admin') { %>
                                        <th style="width: 120px;">Actions</th>
                                    <% } %>
                                </tr>
                            </thead>
                            <tbody id="instructorsTableBody">
                                <% instructors.forEach(instructor => { %>
                                    <tr class="clickable-row instructor-row" 
                                        data-href="/instructors/<%= instructor._id %>" 
                                        data-name="<%= instructor.name.toLowerCase() %>" 
                                        data-id="<%= instructor.id %>" 
                                        data-contact="<%= instructor.contact.replace(/\D/g, '') %>"
                                        style="cursor: pointer;">
                                        <td><%= instructor.id %></td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="<%= instructor.image %>" alt="<%= instructor.name %>" 
                                                     class="rounded-circle me-3" width="40" height="40"
                                                     style="object-fit: cover;">
                                                <strong><%= instructor.name %></strong>
                                            </div>
                                        </td>
                                        <td><%= instructor.contact %></td>
                                        <td><%= instructor.address %></td>
                                        <% if (typeof userRole !== 'undefined' && userRole === 'admin') { %>
                                            <td onclick="event.stopPropagation();">
                                                <div class="dropdown">
                                                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" 
                                                            data-bs-toggle="dropdown" aria-expanded="false">
                                                        Actions
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li>
                                                            <a class="dropdown-item" href="/instructors/<%= instructor._id %>/edit">
                                                                <i class="fas fa-edit me-2"></i>Edit
                                                            </a>
                                                        </li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <form method="POST" action="/instructors/<%= instructor._id %>?_method=DELETE" 
                                                                  onsubmit="return confirm('Are you sure you want to delete this instructor?')">
                                                                <button type="submit" class="dropdown-item text-danger">
                                                                    <i class="fas fa-trash me-2"></i>Delete
                                                                </button>
                                                            </form>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </td>
                                        <% } %>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <!-- No Results Message (Hidden by default) -->
                    <div class="text-center py-4 d-none" id="noResults">
                        <i class="fas fa-search fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No instructors found</h5>
                        <p class="text-muted">Try adjusting your search terms</p>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="fas fa-chalkboard-teacher fa-3x text-muted mb-3"></i>
                        <% if (typeof userRole !== 'undefined' && userRole === 'admin') { %>
                            <p class="text-muted">No instructors found. <a href="/instructors/new">Add a new instructor</a> to get started.</p>
                        <% } else { %>
                            <p class="text-muted">No instructors found.</p>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script>
    // Make table rows clickable
    document.querySelectorAll('.clickable-row').forEach(row => {
        row.addEventListener('click', function() {
            window.location.href = this.dataset.href;
        });
    });

    // Search functionality
    const searchInput = document.getElementById('instructorSearch');
    const clearBtn = document.getElementById('clearSearch');
    const instructorRows = document.querySelectorAll('.instructor-row');
    const noResults = document.getElementById('noResults');
    const tableContainer = document.querySelector('.table-responsive');
    const instructorCount = document.getElementById('instructorCount');
    const totalInstructors = <%= instructors ? instructors.length : 0 %>;

    function updateCount(visibleCount) {
        if (visibleCount === totalInstructors) {
            instructorCount.textContent = `${totalInstructors} instructor${totalInstructors !== 1 ? 's' : ''} found`;
        } else {
            instructorCount.textContent = `${visibleCount} of ${totalInstructors} instructor${totalInstructors !== 1 ? 's' : ''}`;
        }
    }

    function performSearch() {
        const searchTerm = searchInput.value.toLowerCase().trim();
        let visibleCount = 0;

        if (searchTerm === '') {
            // Show all rows
            instructorRows.forEach(row => {
                row.style.display = 'table-row';
                visibleCount++;
            });
            clearBtn.style.display = 'none';
            if (tableContainer) tableContainer.style.display = 'block';
            if (noResults) noResults.classList.add('d-none');
        } else {
            // Filter rows
            instructorRows.forEach(row => {
                const name = row.dataset.name;
                const id = row.dataset.id;
                const contact = row.dataset.contact;
                
                if (name.includes(searchTerm) || 
                    id.includes(searchTerm) || 
                    contact.includes(searchTerm)) {
                    row.style.display = 'table-row';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });
            clearBtn.style.display = 'inline-block';
            
            // Show/hide no results message
            if (visibleCount === 0) {
                if (tableContainer) tableContainer.style.display = 'none';
                if (noResults) noResults.classList.remove('d-none');
            } else {
                if (tableContainer) tableContainer.style.display = 'block';
                if (noResults) noResults.classList.add('d-none');
            }
        }

        updateCount(visibleCount);
    }

    // Search input event
    if (searchInput) {
        searchInput.addEventListener('input', performSearch);
        
        // Clear search
        clearBtn.addEventListener('click', () => {
            searchInput.value = '';
            performSearch();
            searchInput.focus();
        });
    }
</script>

<%- include('../../partials/footer') %>