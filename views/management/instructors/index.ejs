<%- include('../../partials/head', { title: 'Manage Instructors' }) %>

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Manage Instructors</h2>
            <a href="/instructors/new" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add New Instructor
            </a>
        </div>
        
        <div class="card">
            <div class="card-body">
                <% if (instructors && instructors.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Instructor ID</th>
                                    <th>Name</th>
                                    <th>Contact</th>
                                    <th>Address</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% instructors.forEach(instructor => { %>
                                    <tr style="cursor: pointer;" onclick="window.location='/instructors/<%= instructor._id %>'">
                                        <td><%= instructor.id %></td>
                                        <td><%= instructor.name %></td>
                                        <td><%= instructor.contact %></td>
                                        <td><%= instructor.address %></td>
                                        <td onclick="event.stopPropagation();">
                                            <a href="/instructors/<%= instructor._id %>/edit" class="btn btn-sm btn-outline-primary me-2">
                                                Edit
                                            </a>
                                            <form method="POST" action="/instructors/<%= instructor._id %>?_method=DELETE" 
                                                  class="d-inline" onsubmit="return confirm('Are you sure you want to delete this instructor?')">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <p class="text-muted">No instructors found. Add your first instructor to get started.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>