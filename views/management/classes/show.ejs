<%- include('../../partials/head', { title: 'Class Details' }) %>

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Class Details</h2>
            <div>
                <!-- Only show edit button for admins -->
                <% if (typeof userRole !== 'undefined' && userRole === 'admin') { %>
                    <a href="/classes/<%= classItem._id %>/edit" class="btn btn-primary me-2">Edit Class</a>
                <% } %>
                <a href="/classes" class="btn btn-secondary">Back to Classes</a>
            </div>
        </div>
        
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-sm-4">
                                <strong>Class ID:</strong>
                            </div>
                            <div class="col-sm-8">
                                <%= classItem.id %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-4">
                                <strong>Class Name:</strong>
                            </div>
                            <div class="col-sm-8">
                                <%= classItem.name %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-4">
                                <strong>Subject:</strong>
                            </div>
                            <div class="col-sm-8">
                                <%= classItem.subject %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-4">
                                <strong>Schedule:</strong>
                            </div>
                            <div class="col-sm-8">
                                <%= classItem.schedule %>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-sm-4">
                                <strong>Instructor:</strong>
                            </div>
                            <div class="col-sm-8">
                                <% if (classItem.instructor && classItem.instructor.name) { %>
                                    <a href="/instructors/<%= classItem.instructor._id %>" class="text-decoration-none">
                                        <%= classItem.instructor.name %>
                                    </a>
                                <% } else { %>
                                    <span class="text-muted">Not assigned</span>
                                <% } %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-4">
                                <strong>Room:</strong>
                            </div>
                            <div class="col-sm-8">
                                <%= classItem.room %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-4">
                                <strong>Capacity:</strong>
                            </div>
                            <div class="col-sm-8">
                                <span class="badge bg-info text-dark">
                                    <% 
                                    let enrolledCount = 0;
                                    if (classItem.students && Array.isArray(classItem.students)) {
                                        enrolledCount = classItem.students.length;
                                    }
                                    %>
                                    <%= enrolledCount %>/<%= classItem.capacity %> students
                                </span>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-4">
                                <strong>Created:</strong>
                            </div>
                            <div class="col-sm-8">
                                <%= new Date(classItem.createdAt).toLocaleDateString() %>
                            </div>
                        </div>
                    </div>
                </div>
                
                <% if (classItem.description) { %>
                    <hr>
                    <div class="row">
                        <div class="col-12">
                            <strong>Description:</strong>
                            <p class="mt-2 text-muted"><%= classItem.description %></p>
                        </div>
                    </div>
                <% } %>
                
                <hr>
                <div class="row">
                    <div class="col-12">
                        <strong>Enrolled Students:</strong>
                        <% if (classItem.students && Array.isArray(classItem.students) && classItem.students.length > 0) { %>
                            <div class="mt-3">
                                <% classItem.students.forEach(student => { %>
                                    <% if (student && student.name) { %>
                                        <span class="badge bg-primary me-2 mb-2 p-2">
                                            <a href="/students/<%= student._id %>" class="text-white text-decoration-none">
                                                <%= student.name %><% if (student.id) { %> (ID: <%= student.id %>)<% } %>
                                            </a>
                                        </span>
                                    <% } %>
                                <% }) %>
                            </div>
                        <% } else { %>
                            <p class="mt-2 text-muted">No students enrolled yet.</p>
                        <% } %>
                    </div>
                </div>
                
                <div class="mt-4 d-flex justify-content-end">
                    <!-- Only show delete button for admins -->
                    <% if (typeof userRole !== 'undefined' && userRole === 'admin') { %>
                        <form method="POST" action="/classes/<%= classItem._id %>?_method=DELETE" 
                              class="d-inline" onsubmit="return confirm('Are you sure you want to delete this class?')">
                            <button type="submit" class="btn btn-danger">Delete Class</button>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>