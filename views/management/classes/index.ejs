<%- include('../../partials/head', { title: 'Manage Classes' }) %>

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2>Manage Classes</h2>
                <p class="text-muted mb-0">View and manage class schedules</p>
            </div>
            <!-- Only show Add New button for admins -->
            <% if (typeof userRole !== 'undefined' && userRole === 'admin') { %>
                <div>
                    <a href="/classes/new" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add New Class
                    </a>
                </div>
            <% } %>
        </div>
        
        <div class="card">
            <div class="card-body">
                <% if (classes && classes.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 80px;">ID</th>
                                    <th style="width: 250px;">Class Name</th>
                                    <th style="width: 120px;">Subject</th>
                                    <th style="width: 150px;">Schedule</th>
                                    <th style="width: 150px;">Instructor</th>
                                    <th style="width: 100px;">Room</th>
                                    <th style="width: 100px;">Enrollment</th>
                                    <th style="width: 120px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% classes.forEach(classItem => { %>
                                    <tr>
                                        <td><%= classItem.id %></td>
                                        <td>
                                            <strong><%= classItem.name %></strong>
                                        </td>
                                        <td><%= classItem.subject %></td>
                                        <td><small><%= classItem.schedule %></small></td>
                                        <td><%= classItem.instructor ? classItem.instructor.name : 'Not assigned' %></td>
                                        <td><%= classItem.room %></td>
                                        <td>
                                            <span class="badge bg-info">
                                                <%= classItem.students.length %>/<%= classItem.capacity %>
                                            </span>
                                        </td>
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" 
                                                        data-bs-toggle="dropdown" aria-expanded="false">
                                                    Actions
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <a class="dropdown-item" href="/classes/<%= classItem._id %>">
                                                            <i class="fas fa-eye me-2"></i>View
                                                        </a>
                                                    </li>
                                                    <% if (typeof userRole !== 'undefined' && userRole === 'admin') { %>
                                                        <li>
                                                            <a class="dropdown-item" href="/classes/<%= classItem._id %>/edit">
                                                                <i class="fas fa-edit me-2"></i>Edit
                                                            </a>
                                                        </li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <form method="POST" action="/classes/<%= classItem._id %>?_method=DELETE" 
                                                                  onsubmit="return confirm('Are you sure you want to delete this class?')">
                                                                <button type="submit" class="dropdown-item text-danger">
                                                                    <i class="fas fa-trash me-2"></i>Delete
                                                                </button>
                                                            </form>
                                                        </li>
                                                    <% } %>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="fas fa-chalkboard fa-3x text-muted mb-3"></i>
                        <% if (typeof userRole !== 'undefined' && userRole === 'admin') { %>
                            <p class="text-muted">No classes found. <a href="/classes/new">Add your first class</a> to get started.</p>
                        <% } else { %>
                            <p class="text-muted">No classes found.</p>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>