<%- include('../../partials/head', { title: 'Edit Class' }) %>

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Edit Class</h2>
            <a href="/classes" class="btn btn-secondary">Back to Classes</a>
        </div>
        
        <div class="card">
            <div class="card-body">
                <form method="POST" action="/classes/<%= classItem._id %>?_method=PUT" id="classForm">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="classId" class="form-label">Class ID</label>
                                <input type="number" class="form-control" name="id" id="classId" 
                                       value="<%= classItem.id %>" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="className" class="form-label">Class Name</label>
                                <input type="text" class="form-control" name="name" id="className" 
                                       value="<%= classItem.name %>" required>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="classSubject" class="form-label">Subject</label>
                                <input type="text" class="form-control" name="subject" id="classSubject" 
                                       value="<%= classItem.subject %>" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="classSchedule" class="form-label">Schedule</label>
                                <input type="text" class="form-control" name="schedule" id="classSchedule" 
                                       value="<%= classItem.schedule %>" required>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="classInstructor" class="form-label">Instructor</label>
                                <select class="form-select" name="instructor" id="classInstructor" required>
                                    <option value="">Select an instructor</option>
                                    <% instructors.forEach(instructor => { %>
                                        <option value="<%= instructor._id %>" 
                                                <%= classItem.instructor && classItem.instructor._id && classItem.instructor._id.toString() === instructor._id.toString() ? 'selected' : '' %>>
                                            <%= instructor.name %>
                                        </option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="classRoom" class="form-label">Room</label>
                                <input type="text" class="form-control" name="room" id="classRoom" 
                                       value="<%= classItem.room %>" required>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="classCapacity" class="form-label">Capacity</label>
                                <input type="number" class="form-control" name="capacity" id="classCapacity" 
                                       value="<%= classItem.capacity %>" required>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="classDescription" class="form-label">Description</label>
                        <textarea class="form-control" name="description" id="classDescription" rows="3"><%= classItem.description || '' %></textarea>
                    </div>
                    
                    <!-- Student Management Section -->
                    <div class="mb-4">
                        <label class="form-label">Students</label>
                        <div class="card">
                            <div class="card-header">
                                <div class="row align-items-center">
                                    <div class="col-md-6">
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="studentSearch" 
                                                   placeholder="Search students by name or ID...">
                                            <button type="button" class="btn btn-outline-secondary" id="clearSearch">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <button type="button" class="btn btn-outline-primary btn-sm" id="selectAll">
                                            Select All Visible
                                        </button>
                                    </div>
                                    <div class="col-md-3 text-end">
                                        <small class="text-muted">
                                            Selected: <span id="selectedCount">0</span>/<span id="capacityLimit">∞</span>
                                        </small>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                                <div id="studentsList">
                                    <% students.forEach(student => { %>
                                        <% 
                                        let isSelected = false;
                                        if (classItem.students && Array.isArray(classItem.students)) {
                                            isSelected = classItem.students.some(enrolledStudent => 
                                                enrolledStudent._id && enrolledStudent._id.toString() === student._id.toString()
                                            );
                                        }
                                        %>
                                        <div class="form-check student-item" data-student-name="<%= student.name.toLowerCase() %>" data-student-id="<%= student.id %>">
                                            <input class="form-check-input student-checkbox" type="checkbox" 
                                                   value="<%= student._id %>" id="student_<%= student._id %>"
                                                   <%= isSelected ? 'checked' : '' %>>
                                            <label class="form-check-label w-100" for="student_<%= student._id %>">
                                                <div class="d-flex justify-content-between align-items-center p-2 rounded <%= isSelected ? 'bg-primary bg-opacity-25 text-white' : '' %>">
                                                    <div>
                                                        <strong><%= student.name %></strong>
                                                        <small class="text-muted d-block">ID: <%= student.id %></small>
                                                    </div>
                                                    <img src="<%= student.image %>" alt="<%= student.name %>" 
                                                         class="rounded-circle" width="40" height="40" style="object-fit: cover;">
                                                </div>
                                            </label>
                                        </div>
                                        <hr class="my-1">
                                    <% }) %>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        Previously enrolled: <%= classItem.students ? classItem.students.length : 0 %> students
                                    </small>
                                    <button type="button" class="btn btn-outline-danger btn-sm" id="clearAll">
                                        Clear All Selections
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Hidden inputs for selected students -->
                    <div id="selectedStudentsInputs"></div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Update Class</button>
                        <a href="/classes/<%= classItem._id %>" class="btn btn-outline-secondary">View Details</a>
                        <a href="/classes" class="btn btn-secondary">Cancel</a>
                        <form method="POST" action="/classes/<%= classItem._id %>?_method=DELETE" 
                              class="d-inline ms-auto" onsubmit="return confirm('Are you sure you want to delete this class?')">
                            <button type="submit" class="btn btn-danger">Delete Class</button>
                        </form>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const studentSearch = document.getElementById('studentSearch');
    const clearSearch = document.getElementById('clearSearch');
    const selectAll = document.getElementById('selectAll');
    const clearAll = document.getElementById('clearAll');
    const studentItems = document.querySelectorAll('.student-item');
    const studentCheckboxes = document.querySelectorAll('.student-checkbox');
    const selectedCount = document.getElementById('selectedCount');
    const capacityLimit = document.getElementById('capacityLimit');
    const capacityInput = document.getElementById('classCapacity');
    const selectedStudentsInputs = document.getElementById('selectedStudentsInputs');

    // Initial setup
    updateSelectedCount();
    updateHiddenInputs();
    updateCapacityLimit();

    // Update capacity limit when capacity changes
    capacityInput.addEventListener('input', function() {
        updateCapacityLimit();
        checkCapacityLimit();
    });

    // Search functionality
    studentSearch.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        studentItems.forEach(item => {
            const studentName = item.dataset.studentName;
            const studentId = item.dataset.studentId;
            const isVisible = studentName.includes(searchTerm) || studentId.includes(searchTerm);
            item.style.display = isVisible ? 'block' : 'none';
            const hr = item.nextElementSibling;
            if (hr && hr.tagName === 'HR') {
                hr.style.display = isVisible ? 'block' : 'none';
            }
        });
    });

    // Clear search
    clearSearch.addEventListener('click', function() {
        studentSearch.value = '';
        studentItems.forEach(item => {
            item.style.display = 'block';
            const hr = item.nextElementSibling;
            if (hr && hr.tagName === 'HR') {
                hr.style.display = 'block';
            }
        });
    });

    // Select all visible
    selectAll.addEventListener('click', function() {
        const visibleCheckboxes = Array.from(studentCheckboxes).filter(checkbox => 
            checkbox.closest('.student-item').style.display !== 'none'
        );
        
        visibleCheckboxes.forEach(checkbox => {
            if (!checkbox.disabled) {
                checkbox.checked = true;
                updateItemStyle(checkbox);
            }
        });
        
        updateSelectedCount();
        updateHiddenInputs();
        checkCapacityLimit();
    });

    // Clear all selections
    clearAll.addEventListener('click', function() {
        studentCheckboxes.forEach(checkbox => {
            checkbox.checked = false;
            updateItemStyle(checkbox);
        });
        
        updateSelectedCount();
        updateHiddenInputs();
        checkCapacityLimit();
    });

    // Handle student selection
    studentCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', function() {
            updateItemStyle(this);
            updateSelectedCount();
            updateHiddenInputs();
            checkCapacityLimit();
        });
    });

    function updateItemStyle(checkbox) {
        const label = checkbox.nextElementSibling;
        const container = label.querySelector('.d-flex');
        if (checkbox.checked) {
            container.classList.add('bg-primary', 'bg-opacity-25', 'text-white');
            container.classList.remove('bg-light');
        } else {
            container.classList.remove('bg-primary', 'bg-opacity-25', 'text-white');
        }
    }

    function updateSelectedCount() {
        const selected = document.querySelectorAll('.student-checkbox:checked').length;
        selectedCount.textContent = selected;
    }

    function updateCapacityLimit() {
        const capacity = parseInt(capacityInput.value) || 0;
        capacityLimit.textContent = capacity > 0 ? capacity : '∞';
    }

    function updateHiddenInputs() {
        const selectedInputs = selectedStudentsInputs;
        selectedInputs.innerHTML = '';
        
        document.querySelectorAll('.student-checkbox:checked').forEach(checkbox => {
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'students';
            input.value = checkbox.value;
            selectedInputs.appendChild(input);
        });
    }

    function checkCapacityLimit() {
        const capacity = parseInt(capacityInput.value) || 0;
        const selected = document.querySelectorAll('.student-checkbox:checked').length;
        
        if (capacity > 0 && selected >= capacity) {
            // Disable unchecked checkboxes
            studentCheckboxes.forEach(checkbox => {
                if (!checkbox.checked) {
                    checkbox.disabled = true;
                    checkbox.parentElement.style.opacity = '0.5';
                }
            });
        } else {
            // Enable all checkboxes
            studentCheckboxes.forEach(checkbox => {
                checkbox.disabled = false;
                checkbox.parentElement.style.opacity = '1';
            });
        }
    }

    // Initialize styles for pre-selected students
    studentCheckboxes.forEach(checkbox => {
        if (checkbox.checked) {
            updateItemStyle(checkbox);
        }
    });
});
</script>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>